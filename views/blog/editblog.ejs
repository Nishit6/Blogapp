<h2 style="font-family: 'Krona One', sans-serif;  margin-left: 15px;font-size: 2rem;">Edit Blog</h2>
<hr>


    <form class="validate-form" novalidate action="/blogs/<%= editBlog._id %>?_method=PATCH " method="POST" style="margin: 20px 150px 100px 350px; border: 2px solid #ccc; padding: 20px; width: 50vw;background-image: url('https://images.unsplash.com/photo-1619252584172-a83a949b6efd?ixid=MnwxMjA3fDB8MHx0b3BpYy1mZWVkfDV8aVVJc25WdGpCMFl8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60');">
        <div class="mb-3" >
          <label for="author" class="form-label">Author name:</label>
          <input type="text" class="form-control" id="author" aria-describedby="emailHelp" placeholder="Enter Text" name="author" value="<%= editBlog.author %> " required>
          
          <div class="valid-feedback">
            Looks good!!
          </div>
          <div class="invalid-feedback">
            Please choose a Product Name.
          </div>
        </div>
        <div class="mb-3" >
            <label for="img" class="form-label">Image URL:</label>
            <input type="text" class="form-control" id="img"  placeholder="Enter URL" name="img" value="<%= editBlog.img %> " required>
            <div id="emailHelp" class="form-text">Enter url</div>
            <div class="valid-feedback">
              Looks good!!
            </div>
            <div class="invalid-feedback">
              Please choose a URL.
            </div>
          </div>
        <div class="mb-3">
          <label for="title" class="form-label">Title:</label>
          <input type="text" class="form-control" id="title" placeholder="Enter title" name="title" value="<%= editBlog.title %> " required>
          <div class="valid-feedback">
            Looks good!!
          </div>
          <div class="invalid-feedback">
            Please add a Price Value.
          </div>
        </div>
        <div class="mb-3">
            <label for="text" class="form-label">Blog Text:</label>
            <textarea class="form-control" id="text" rows="3"name="text" required><%= editBlog.text %>  </textarea >
              <div class="valid-feedback">
                Looks good!!
              </div>
              <div class="invalid-feedback">
                Please add Text.
              </div>
          </div>
        <button type="submit" class="btn btn-primary">SAVE</button>
      </form>

     
    



  





